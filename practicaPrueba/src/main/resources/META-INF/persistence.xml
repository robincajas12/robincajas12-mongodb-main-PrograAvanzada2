<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
  <persistence-unit name="default">

    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

    <class>com.project007.model.Department</class>
    <class>com.project007.model.Employee</class>
    <class>com.project007.model.Phone</class>
    <class>com.project007.model.Address</class>
    <class>com.project007.model.Project</class>
    <class>com.project007.model.DesignProject</class>
    <class>com.project007.model.QualityProject</class>

    <properties>
      <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver"/>
      <property name="jakarta.persistence.jdbc.user" value="postgres"/>
      <property name="jakarta.persistence.jdbc.password" value="postgres"/>
      <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:5432/books"/>
      <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
      <property name="hibernate.hbm2ddl.auto" value="create"/>
      <property name="jakarta.persistence.schema-generation.scripts.create-target" value="mibase.sql"/>
      <property name="hibernate.show_sql" value="true"/>
      <property name="hibernate.format_sql" value="true"/>
      <property name="hibernate.highlight_sql" value="true"/>
    </properties>

  </persistence-unit>
</persistence>